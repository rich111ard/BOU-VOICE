<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.suggest.WelcomeSuggestFragment">

    <!-- Bank of Uganda Image -->
    <ImageView
        android:id="@+id/bou_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/bou_logo_round"
    android:contentDescription="Bank of Uganda Logo"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title: Bank of Uganda -->
    <TextView
        android:id="@+id/bou_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank of Uganda Suggestion Box"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bou_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Motivational Text -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to the Bank of Uganda Suggestion Box. We encourage you to freely share your thoughts, ideas, or issues. Rest assured, your identity will remain completely anonymous, and your feedback is vital in helping us improve our services."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/bou_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Proceed Button -->
    <Button
        android:id="@+id/btn_proceed_to_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to Give Suggestion"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
