<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <!-- Bottom Navigation specific style -->
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_text_color_selector</item> <!-- Color selector for icons -->
        <item name="itemTextColor">@color/bottom_nav_text_color_selector</item> <!-- Color selector for text -->
        <item name="background">@drawable/bottom_nav_background_selector</item> <!-- Background selector -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item> <!-- or your preferred color -->
    </style>

    <!-- res/values/styles.xml -->
    <style name="MenuTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <string-array name="prefix_array">
        <item>Mr</item>
        <item>Mrs</item>
        <item>Ms</item>
        <item>Miss</item>
        <item>Dr</item>
        <item>Eng</item>
        <item>Prof</item>
        <item>Hon</item>
        <item>Rev</item>
        <item>Capt</item>
        <item>Maj</item>
        <item>Col</item>
        <item>Lt</item>
        <item>Sir</item>
        <item>Lady</item>
        <item>Justice</item>
        <item>Arch</item>
        <item>Chief</item>
    </string-array>










</resources>


