<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_200"
    android:padding="16dp">

    <TextView
        android:id="@+id/bankWideSuggestionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank-wide Suggestions"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bankWideSuggestionsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit suggestions that are applicable bank-wide."
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Additional content for bank-wide suggestions -->




</LinearLayout>
