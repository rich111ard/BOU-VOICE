                android:id="@+id/department_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Human Resources"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/suggestion_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Develop a comprehensive onboarding program for new hires to improve retention and job satisfaction."
