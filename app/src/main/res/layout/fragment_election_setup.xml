<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <!-- Title Section -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Election Setup"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose the type of election you wish to set up:"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Departmental Voting Button -->
    <Button
        android:id="@+id/department_voting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departmental Voting"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Bank-wide Voting Button -->
    <Button
        android:id="@+id/bank_wide_voting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank-wide Voting"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Others Voting Button -->
    <Button
        android:id="@+id/others_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Others"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp" />

</LinearLayout>
