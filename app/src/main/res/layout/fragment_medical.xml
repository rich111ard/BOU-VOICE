<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/departmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Department"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/departmentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the Medical Department where you can submit your suggestions."
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/submitSuggestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Suggestion"
        android:layout_marginTop="16dp"/>
</LinearLayout>
