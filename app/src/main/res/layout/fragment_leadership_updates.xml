<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Leadership Updates Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leadership Updates"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Recent Election Results Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Elections Results"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulations to Ms. Annet Kiyingi, who won the recent election for Head of Human Resources, securing 72% of the votes. Annet is known for her dedication to employee welfare and is expected to lead several new initiatives to improve work-life balance."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. David Ochan was elected as the new Director of IT Operations. David received 65% of the votes and is expected to lead the department through a major digital transformation, focusing on improving cybersecurity and network infrastructure."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Upcoming Elections Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Elections"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The election for the position of Head of Strategy &amp; Quality Assurance is scheduled for next month. Nominations have been opened, and eligible candidates are encouraged to submit their applications by the end of the week."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The position of Director of Currency Management will also be up for election soon. This role is critical in ensuring the smooth distribution of currency throughout the country."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Team Captain Elections Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Team Captain Elections"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The annual Team Captain elections will take place next month, with several candidates from different departments already gearing up for the race. This yearâ€™s election promises to be competitive, as more teams are getting involved in fostering leadership within their ranks."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidates for the Team Captain role will have the opportunity to lead their respective teams through various departmental activities and represent their peers in organizational decision-making."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Additional Updates Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Leadership Updates"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In the recent Leadership Forum, several key leaders proposed the implementation of a new mentorship program aimed at junior staff members. The goal is to enhance knowledge transfer and build future leaders from within the organization."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are also ongoing discussions about restructuring the way leadership training is conducted, with more emphasis being placed on strategic decision-making and innovative thinking."
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
