<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for selected item -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/bottom_nav_selected_background" /> <!-- Selected button background -->
        </shape>
    </item>
    <!-- Background for unselected items -->
    <item>
        <shape>
            <solid android:color="@color/bottom_nav_unselected_background" /> <!-- Unselected buttons background -->
        </shape>
    </item>
</selector>
